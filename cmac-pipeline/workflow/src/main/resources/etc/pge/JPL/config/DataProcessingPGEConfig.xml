<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

        <!-- How to run the PGE -->
        <exe dir="[JobDir]" shell="/bin/bash">
        
          <!--  location of NCO operators -->
          <cmd>export NCOPATH=/usr/bin</cmd>
          
          <!-- top-level directory for input data -->
          <cmd>export INPUT_DIRECTORY=/usr/local/pge/JPL/input</cmd>
          
          <!-- top-level directory for output data -->
          <cmd>export OUTPUT_DIRECTORY=/usr/local/pge/JPL/output</cmd>
          
          <!-- same sub-directory for input/output data -->
		  <cmd>export SUBDIRECTORY=ccmp/L3.5a/monthly/flk</cmd>
		  
          <cmd>cd [PGE_ROOT]/exec</cmd>
          <cmd>python ./obs4MIPs_ccmp.py</cmd>
          
        </exe>

            <!-- CAS Crawler directives -->
            <output>
                <!-- root directory where products are generated by PGE -->
                <dir path="[PGE_ROOT]/output/ccmp/L3.5a/monthly/flk/2011" createBeforeExe="false">

                <!-- metadata extractors matching specific files -->
                <files regExp=".*\.nc" metFileWriterClass="gov.nasa.jpl.cmac.extractors.XmlConfigMetadataExtractor"  
                       args="[PGE_ROOT]/config/commonMetadata.xml"/>
                <files regExp=".*\.nc" metFileWriterClass="gov.nasa.jpl.cmac.extractors.NetcdfMetadataExtractor"/>
                <files regExp=".*\.nc" metFileWriterClass="gov.nasa.jpl.cmac.extractors.ChecksumMetadataExtractor"/>
            </dir>
        </output>

        <!-- custom metadata to add to output metadata files -->
        <customMetadata>

                <metadata key="ProductionDateTime" val="[DATE.UTC]"/>
                <metadata key="JobDir" val="[PGE_ROOT]/output/jobs/job-[ProductionDateTime]"/>

      </customMetadata>

</pgeConfig>
