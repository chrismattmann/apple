<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

        <!-- How to run the PGE -->
        <exe dir="[JobDir]" shell="/bin/bash">
          <cmd>wget --no-check-certificate --certificate [CERTIFICATE] --private-key [CERTIFICATE] --verbose --post-data="uri=[OPENDAP_URL]&amp;metadataRepositoryType=OPENDAP&amp;schema=cmip5" http://[INDEX_NODE]/esg-search/ws/harvest/</cmd>
          <cmd>wget --no-check-certificate --certificate [CERTIFICATE] --private-key [CERTIFICATE] --verbose --post-data="uri=[THREDDS_URL]&amp;metadataRepositoryType=THREDDS" http://[INDEX_NODE]/esg-search/ws/harvest/</cmd>
        </exe>

        <!-- custom metadata to add to output metadata files -->
        <customMetadata>

           <metadata key="CERTIFICATE" val="[HOME]/.esg/credentials.pem"/>
           <metadata key="INDEX_NODE" val="test-datanode.jpl.nasa.gov"/>
           <metadata key="OPENDAP_URL" val="http://airsl2.ecs.nasa.gov/thredds/dodsC/TA_AIRX3STM_ESG_timeSeries.nc"/>
           <metadata key="THREDDS_URL" val="http://airsl2.ecs.nasa.gov/thredds/catalog/TA_AIRX3STM_ESG_GRAN/2013/catalog.xml"/>

      </customMetadata>

</pgeConfig>
